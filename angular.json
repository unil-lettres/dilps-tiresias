{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "dilps": {
            "root": "",
            "sourceRoot": "client",
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": {
                            "base": "htdocs",
                            "browser": ""
                        },
                        "preserveSymlinks": true,
                        "index": "client/index.html",
                        "browser": "client/main.ts",
                        "tsConfig": "client/tsconfig.app.json",
                        "deleteOutputPath": false,
                        "polyfills": ["zone.js", "@angular/localize/init"],
                        "assets": ["client/assets", "client/favicon-dilps.ico", "client/favicon-tiresias.ico"],
                        "styles": [
                            "client/styles.scss",
                            "node_modules/snazzy-info-window/dist/snazzy-info-window.css",
                            "node_modules/@ecodev/natural-layout/natural-layout.css"
                        ],
                        "scripts": [],
                        "allowedCommonJsDependencies": ["@agm/snazzy-info-window", "striptags"]
                    },
                    "configurations": {
                        "production": {
                            "namedChunks": true,
                            "budgets": [
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb"
                                }
                            ],
                            "outputHashing": "all",
                            "fileReplacements": [
                                {
                                    "replace": "client/environments/environment.ts",
                                    "with": "client/environments/environment.prod.ts"
                                }
                            ]
                        },
                        "staging": {
                            "namedChunks": true,
                            "budgets": [
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "6kb"
                                }
                            ],
                            "outputHashing": "all",
                            "fileReplacements": [
                                {
                                    "replace": "client/environments/environment.ts",
                                    "with": "client/environments/environment.stage.ts"
                                }
                            ]
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        },
                        "map": {
                            "namedChunks": true,
                            "sourceMap": {
                                "scripts": true,
                                "styles": false,
                                "hidden": false,
                                "vendor": false
                            }
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "host": "dilps.lan",
                        "proxyConfig": "proxy.conf.json",
                        "port": 4400
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "dilps:build:production"
                        },
                        "development": {
                            "buildTarget": "dilps:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "dilps:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "client/test.ts",
                        "karmaConfig": "./karma.conf.js",
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "tsConfig": "client/tsconfig.spec.json",
                        "scripts": [],
                        "styles": ["client/styles.scss"],
                        "assets": ["client/assets", "client/favicon-dilps.ico", "client/favicon-tiresias.ico"]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["client/**/*.ts", "client/**/*.html"],
                        "maxWarnings": 0
                    }
                }
            }
        }
    },
    "cli": {
        "schematicCollections": ["@angular-eslint/schematics"],
        "packageManager": "yarn",
        "analytics": false
    },
    "schematics": {
        "@schematics/angular:component": {
            "prefix": "app",
            "style": "scss"
        },
        "@schematics/angular:directive": {
            "prefix": "app"
        },
        "@angular-eslint/schematics:application": {
            "setParserOptionsProject": true
        },
        "@angular-eslint/schematics:library": {
            "setParserOptionsProject": true
        }
    }
}
